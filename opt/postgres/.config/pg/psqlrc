--
-- Postgres psql configuration file
--

\set QUIET 1
\set PROMPT1 '%M:%> %n@%/%R%#%x '
\set PROMPT2 '%M %n@%/%R %# '
\set COMP_KEYWORD_CASE upper
\pset null '[null]'
\timing
\set HISTSIZE 2000
\x auto
\set VERBOSITY verbose
\unset QUIET

\echo 'Welcome to PostgreSQL! \n'

