#!/usr/bin/env zsh
#
# Display latest stable versions
#

# elm
ELM_VERSION="$(asdf list-all elm | grep -v "[a-zA-Z]" | tail -n 1)"
echo "ELM_VERSION: ${ELM_VERSION}"

# node lts
NODE_LTS=8
NODE_LTS_VERSION="$(asdf list-all nodejs | grep "^${NODE_LTS}" | grep -v "[a-zA-Z]" | tail -n 1)"
echo "NODE_LTS_VERSION: ${NODE_LTS_VERSION}"

# node dev
NODE_VERSION="$(asdf list-all nodejs | grep -v "[a-zA-Z]" | tail -n 1)"
echo "NODE_VERSION: ${NODE_VERSION}"

# python 3
PYTHON_VERSION="$(asdf list-all python | grep "^3" | grep -v "[a-zA-Z]" | tail -n 1)"
echo "PYTHON_VERSION: ${PYTHON_VERSION}"

# python 2
PYTHON2_VERSION="$(asdf list-all python | grep "^2" | grep -v "[a-zA-Z]" | tail -n 1)"
echo "PYTHON2_VERSION: ${PYTHON2_VERSION}"

# ruby
RUBY_MAJOR_VERSION=2
RUBY_VERSION="$(asdf list-all ruby | grep "^${RUBY_MAJOR_VERSION}" | grep -v "[a-zA-Z]" | tail -n 1)"
echo "RUBY_VERSION: ${RUBY_VERSION}"
