#!/usr/bin/env bash
#
# Sets the global java to the latest one installed
#

set -e

if [[ ! $(command -v jenv) ]]; then
  echo "jenv was not found"
  exit 1
fi

# Reset default back to to system
jenv global system

# Get the latest version
VERSION=$(jenv versions | grep -v "[a-zA-Z]" | tail -n 1 | tr -d ' ')

# Set the new version
jenv global $VERSION
