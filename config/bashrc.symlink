#!/usr/bin/env sh
# Executes commands at the start of an interactive session

# If not running interactively (powershell), don't do anything
[ -z "$PS1" ] && return

# Launch Zsh
if [ -t 1 ]; then
  exec zsh
fi

# Dotfiles directory
export DOTPATH="${HOME}/.dotfiles"

# rbenv support
[ -s "${DOTPATH}/plugins/ruby/rbenv.zsh" ] && source "${DOTPATH}/plugins/ruby/rbenv.zsh"

# Alias definitions.
if [ -f "${DOTPATH}/zsh/30_aliases.zsh" ]; then
  source "${DOTPATH}/zsh/30_aliases.zsh"
fi
