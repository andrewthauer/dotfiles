<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN"
  "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
  <key>Label</key>
  <string>xdg.env</string>
  <key>ProgramArguments</key>
  <array>
    <!-- https://wiki.archlinux.org/index.php/XDG_Base_Directory -->
    <!-- XDG_CONFIG_HOME -->
    <string>/bin/launchctl</string>
    <string>setenv</string>
    <string>XDG_CONFIG_HOME</string>
    <string>~/.config</string>
    <!-- XDG_DATA_HOME -->
    <string>/bin/launchctl</string>
    <string>setenv</string>
    <string>XDG_DATA_HOME</string>
    <string>~/.local/share</string>
    <!-- XDG_CACHE_HOME -->
    <string>/bin/launchctl</string>
    <string>setenv</string>
    <string>XDG_CACHE_HOME</string>
    <string>~/.cache</string>
    <!-- XDG_STATE_HOME -->
    <string>/bin/launchctl</string>
    <string>setenv</string>
    <string>XDG_STATE_HOME</string>
    <string>~/.local/state</string>
    <!-- XDG_BIN_HOME -->
    <string>/bin/launchctl</string>
    <string>setenv</string>
    <string>XDG_BIN_HOME</string>
    <string>~/.local/bin</string>
  </array>
  <key>RunAtLoad</key>
  <true />
  <key>ServiceIPC</key>
  <false />
</dict>
</plist>
