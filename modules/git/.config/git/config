# https://git-scm.com/docs/git-config

[branch]
  sort = -committerdate

[commit]
  verbose = true

[core]
  excludesfile = ~/.config/git/ignore
  mergeoptions = --no-edit
  editor = nvim
  pager = delta

[diff]
  algorithm = histogram

[fetch]
  prune = true

[init]
  defaultBranch = main

[merge]
  conflictStyle = zdiff3

[pull]
	ff = only

[push]
  default = simple
  autoSetupRemote = true

[rebase]
  autosquash = true

[rerere]
  enabled = true

[url "ssh://git@github.com/"]
  insteadOf = https://github.com/

