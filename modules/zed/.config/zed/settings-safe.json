{
  "agent": {
    "always_allow_tool_actions": false,
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    },
    "default_profile": "write",
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    },
    "profiles": {
      "container-use": {
        "name": "Container Use",
        "tools": {
          "fetch": true,
          "now": true,
          "thinking": true,
          "copy_path": false,
          "create_directory": false,
          "delete_path": false,
          "diagnostics": false,
          "edit_file": false,
          "find_path": false,
          "grep": false,
          "list_directory": false,
          "move_path": false,
          "open": false,
          "read_file": false,
          "terminal": false
        },
        "enable_all_context_servers": false,
        "context_servers": {
          "container-use": {
            "tools": {
              "environment_create": true,
              "environment_add_service": true,
              "environment_update": true,
              "environment_run_cmd": true,
              "environment_open": true,
              "environment_file_write": true,
              "environment_file_read": true,
              "environment_file_list": true,
              "environment_file_delete": true,
              "environment_checkpoint": true
            }
          }
        }
      }
    }
  },
  "buffer_font_size": 15,
  "buffer_font_family": "FiraCode Nerd Font Mono",
  "context_servers": {
    "container-use": {
      "source": "custom",
      "enabled": true,
      "command": "cu",
      "args": ["stdio"],
      "env": {}
    }
  },
  "edit_predictions": {
    "enabled_in_text_threads": true,
    "mode": "eager"
  },
  "ensure_final_newline_on_save": true,
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "file_types": {
    "GitConfig": ["**/git/config*", "**/git/aliases*"],
    "Helm": ["**/templates/**/*.tpl", "**/templates/**/*.yaml"],
    "Markdown": ["*.rules", "*.mdc"],
    "Shell Script": ["**/*.bats"],
    "XML": ["*.plist"]
  },
  "file_scan_exclusions": [".git/*", ".jj/*", "**/node_modules/**"],
  "format_on_save": "off",
  "icon_theme": {
    "mode": "system",
    "light": "Zed (Default)",
    "dark": "Zed (Default)"
  },
  "inlay_hints": {
    "enabled": false
  },
  "languages": {},
  "lsp": {
    "ruby-lsp": {
      "initialization_options": {
        "enabledFeatures": {
          "diagnostics": false
        }
      },
      "settings": {
        "use_bundler": false
      }
    }
  },
  "search": {
    "include_ignored": false
  },
  "ssh_connections": [
    {
      "host": "hass",
      "projects": [
        {
          "paths": ["~", "/root/config"]
        }
      ]
    },
    {
      "host": "nas",
      "projects": [
        {
          "paths": ["~", "/volume1/docker"]
        }
      ]
    }
  ],
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "terminal": {
    "font_family": "FiraCode Nerd Font Mono",
    "font_size": 15,
    "option_as_meta": true,
    "shell": {
      "program": "/opt/homebrew/bin/nu"
    },
    "toolbar": {
      "breadcrumbs": false
    }
  },
  "theme": "Catppuccin Frapp√©",
  "ui_font_family": "FiraCode Nerd Font Propo",
  "ui_font_size": 15,
  "vim_mode": true,
  "vim": {
    "toggle_relative_line_numbers": false
  }
}
