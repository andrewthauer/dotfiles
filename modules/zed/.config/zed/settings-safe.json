{
  "agent": {
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    },
    "version": "2",
    "always_allow_tool_actions": false,
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    },
    "default_profile": "write"
  },
  "buffer_font_size": 15,
  "buffer_font_family": "FiraCode Nerd Font Mono",
  "edit_predictions": {
    "enabled_in_text_threads": true,
    "mode": "eager"
  },
  "ensure_final_newline_on_save": true,
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "file_types": {
    "GitConfig": [
      "**/git/config*",
      "**/git/aliases*"
    ],
    "Helm": [
      "**/templates/**/*.tpl",
      "**/templates/**/*.yaml"
    ],
    "Markdown": [
      "*.rules",
      "*.mdc"
    ],
    "Shell Script": [
      "**/*.bats"
    ],
    "XML": [
      "*.plist"
    ]
  },
  "file_scan_exclusions": [
    ".git/*",
    ".jj/*",
    "**/node_modules/**"
  ],
  "format_on_save": "off",
  "icon_theme": {
    "mode": "system",
    "light": "Zed (Default)",
    "dark": "Zed (Default)"
  },
  "inlay_hints": {
    "enabled": false
  },
  "language_models": {},
  "languages": {
    "Ruby": {
      "language_servers": [
        "ruby-lsp",
        "!solargraph",
        "!rubocop"
      ]
    }
  },
  "lsp": {
    "ruby-lsp": {
      "initialization_options": {
        "enabledFeatures": {
          "diagnostics": false
        }
      },
      "settings": {
        "use_bundler": false
      }
    }
  },
  "search": {
    "include_ignored": false
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "terminal": {
    "font_family": "FiraCode Nerd Font Mono",
    "font_size": 15,
    "option_as_meta": true,
    "shell": {
      "program": "/opt/homebrew/bin/nu"
    },
    "toolbar": {
      "breadcrumbs": false
    }
  },
  "theme": "Catppuccin Frapp√©",
  "ui_font_family": "FiraCode Nerd Font Propo",
  "ui_font_size": 15,
  "vim_mode": true,
  "vim": {
    "toggle_relative_line_numbers": false
  },
  "ssh_connections": [
    {
      "host": "hass",
      "projects": [
        {
          "paths": [
            "~",
            "/root/config"
          ]
        }
      ]
    },
    {
      "host": "nas",
      "projects": [
        {
          "paths": [
            "~",
            "/volume1/docker"
          ]
        }
      ]
    }
  ]
}
