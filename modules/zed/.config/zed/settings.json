// https://zed.dev/docs/configuring-zed
{
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3-5-sonnet"
    },
    "version": "2",
    "enable_experimental_live_diffs": true
  },
  "autosave": "off",
  "buffer_font_size": 15,
  "buffer_font_family": "FiraCode Nerd Font Mono",
  "ensure_final_newline_on_save": true,
  "features": {
    "copilot": true
    // "inline_completion_provider": "zed"
  },
  "file_types": {
    "GitConfig": ["**/git/config*", "**/git/aliases*"],
    "Helm": [
      "**/templates/**/*.tpl",
      "**/templates/**/*.yaml",
      "**/templates/**/*.yml",
      "**/helmfile.d/**/*.yaml",
      "**/helmfile.d/**/*.yml"
    ],
    "Shell Script": ["**/*.bats"]
  },
  "format_on_save": "off",
  "icon_theme": "Material Icon Theme",
  "inlay_hints": {
    "enabled": false
  },
  "languages": {
    "Ruby": {
      "language_servers": ["ruby-lsp", "!solargraph", "!rubocop"]
    }
  },
  "lsp": {
    "ruby-lsp": {
      "initialization_options": {
        "enabledFeatures": {
          "diagnostics": false
        }
      },
      "settings": {
        "use_bundler": false
      }
    }
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "terminal": {
    "font_family": "FiraCode Nerd Font Mono",
    "font_size": 15,
    "option_as_meta": true,
    "shell": {
      "program": "/opt/homebrew/bin/nu"
    },
    "toolbar": {
      "breadcrumbs": false
    }
  },
  "theme": "Catppuccin Frapp√©",
  "ui_font_family": "FiraCode Nerd Font Propo",
  "ui_font_size": 15,
  "vim_mode": true,
  "vim": {
    "toggle_relative_line_numbers": true
  },
  // Should be moved to a seperate file when supported
  // https://github.com/zed-industries/zed/discussions/23663
  "ssh_connections": [
    {
      "host": "hass",
      "projects": [{ "paths": ["~", "/root/config"] }]
    },
    {
      "host": "nas",
      "projects": [{ "paths": ["~", "/volume1/docker"] }]
    }
  ]
}
