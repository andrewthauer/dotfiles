// Place your settings in this file to overwrite the default settings
{
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "[bats]": {
    "editor.defaultFormatter": "foxundermoon.shell-format",
    "editor.formatOnSave": true
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[lua]": {
    "editor.defaultFormatter": "sumneko.lua"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[nix]": {},
  "[python]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true
  },
  "[ruby]": {
    "editor.defaultFormatter": "Shopify.ruby-lsp",
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.semanticHighlighting.enabled": true
  },
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.formatOnSave": true
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format",
    "editor.formatOnSave": true
  },
  "[terraform]": {
    "editor.defaultFormatter": "hashicorp.terraform",
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false
  },
  "breadcrumbs.enabled": true,
  "dotfiles.repository": "https://github.com/andrewthauer/dotfiles",
  "dotfiles.targetPath": "~/.dotfiles",
  "editor.accessibilitySupport": "off",
  "editor.copyWithSyntaxHighlighting": false,
  "editor.fontFamily": "'Fira Code', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 15,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": false,
  "editor.fontLigatures": true,
  "editor.inlineSuggest.suppressSuggestions": true,
  "editor.inlineSuggest.enabled": true,
  "editor.minimap.enabled": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.renderControlCharacters": false,
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,
  "editor.useTabStops": false,
  "extensions.autoUpdate": "onlyEnabledExtensions",
  "extensions.ignoreRecommendations": true,
  "files.associations": {
    ".env*": "dotenv",
    "*Dockerfile*": "dockerfile",
    "*gemrc": "yaml",
    "*ignore": "gitignore",
    "*vimrc*": "viml"
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/*.eggs": true,
    "**/__pycache__": true,
    "**/*.egg-info": true,
    "**/.mypy_cache": true,
    "**/.pytest_cache": true,
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "git.autofetch": true,
  "git.mergeEditor": false,
  "github.copilot.enable": {
    "*": true,
    "plaintext": false
  },
  "github.copilot.nextEditSuggestions.enabled": true,
  "githubPullRequests.pullBranch": "never",
  "gitlens.advanced.messages": {
    "suppressIntegrationDisconnectedTooManyFailedRequestsWarning": true
  },
  "gitlens.codeLens.enabled": false,
  "javascript.updateImportsOnFileMove.enabled": "never",
  "pgsql.serverGroups": [
    {
      "name": "Servers",
      "id": "708C066A-FE4E-4F7A-9C5D-35EFA35B93B1",
      "isDefault": true
    }
  ],
  "pgsql.connections": [
    {
      "id": "84189D2F-8136-42FD-89CE-0C2949E7A4E2",
      "groupId": "708C066A-FE4E-4F7A-9C5D-35EFA35B93B1",
      "authenticationType": "SqlLogin",
      "connectTimeout": 15,
      "applicationName": "vscode-pgsql",
      "clientEncoding": "utf8",
      "sslmode": "prefer",
      "server": "localhost",
      "user": "postgres",
      "profileName": "localhost, <default> (postgres)",
      "expiresOn": 0,
      "password": "",
      "emptyPasswordInput": true
    }
  ],
  "projectManager.git.baseFolders": ["$home/.dotfiles", "$home/src"],
  "projectManager.groupList": true,
  "projectManager.sortList": "Recent",
  "projectManager.vscode.baseFolders": [],
  "redhat.telemetry.enabled": false,
  "rubyLsp.rubyVersionManager": {
    "identifier": "mise"
  },
  "search.followSymlinks": false,
  "terminal.external.osxExec": "Ghostty.app",
  "terminal.integrated.cursorStyle": "underline",
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.defaultProfile.osx": "nu",
  "terminal.integrated.drawBoldTextInBrightColors": false,
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.fontWeight": "400",
  "terminal.integrated.inheritEnv": false,
  "terminal.integrated.minimumContrastRatio": 4.5,
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.smoothScrolling": true,
  "typescript.updateImportsOnFileMove.enabled": "never",
  "window.customTitleBarVisibility": "never",
  "window.nativeTabs": true,
  "workbench.activityBar.orientation": "vertical",
  "workbench.colorCustomizations": {
    "terminal.ansiBlack": "#303030",
    "terminal.ansiBrightBlack": "#414141",
    "terminal.ansiRed": "#FF8080",
    "terminal.ansiBrightRed": "#FF5274",
    "terminal.ansiGreen": "#87AE86",
    "terminal.ansiBrightGreen": "#A0CFA1",
    "terminal.ansiYellow": "#FFFB9D",
    "terminal.ansiBrightYellow": "#FFFD87",
    "terminal.ansiBlue": "#4080A0",
    "terminal.ansiBrightBlue": "#95BFF3",
    "terminal.ansiMagenta": "#D68686",
    "terminal.ansiBrightMagenta": "#CC9495",
    "terminal.ansiCyan": "#60B38A",
    "terminal.ansiBrightCyan": "#8CD0D3",
    "terminal.ansiWhite": "#D6D6D6",
    "terminal.ansiBrightWhite": "#FFFFFF",
    // "terminal.background": "#3F3F3F",
    "terminal.foreground": "#DEDEDE",
    "terminal.selectionBackground": "#FED5AE94",
    "terminalCursor.foreground": "#D6D6D6"
  },
  "workbench.colorTheme": "Catppuccin Frapp√©",
  "workbench.editor.enablePreview": true,
  "workbench.editor.editorActionsLocation": "hidden",
  "workbench.settings.editor": "json",
  "workbench.startupEditor": "none"
}
