#!/usr/bin/env bash
# Summary:
#   Search for directories only with ripgrep
#
# Usage:
#   rg-dirs

set -e

export dirname_cmd="dirname"
if [ "$(uname)" = "Darwin" ]; then
  dirname_cmd="gdirname"
fi

rg --files --null --hidden --no-messages --glob "!.git" "${1:-.}" 2>/dev/null |
  xargs -0 "$dirname_cmd" |
  awk '!h[$0]++' |
  sort -u
