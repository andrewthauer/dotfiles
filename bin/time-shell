#!/usr/bin/env sh
#
# description:
#   Profile the shell startup time
#
# usage:
#   time-shell
#

source "${DOTFILES_DIR}/bin/parent-cmd"
CMD="$(parent_cmd)"

if [[ "${CMD}" == "zsh" ]]; then
  time -p zsh --interactive -c exit
elif [[ "${CMD}" == "bash" ]]; then
  time -p bash --login -c exit
elif [[ "${CMD}" == "sh" ]]; then
  time -p sh --login -c exit
else
  echo "Unsupported shell: ${CMD}"
fi
