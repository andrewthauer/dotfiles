#!/usr/bin/env bash
#
# description:
#   Profile the shell startup time
#
# usage:
#   time-shell
#

source "${DOTFILES_BIN_DIR}/parent-cmd"
CMD="$(parent-cmd)"

if [[ "${CMD}" == "zsh" ]]; then
  time -p zsh --interactive -c exit
elif [[ "${CMD}" == "bash" ]]; then
  time -p bash --login -c exit
else
  echo "Unsupported shell: ${CMD}"
fi
