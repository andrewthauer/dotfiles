#!/usr/bin/env bash
# Summary:
#   Prompt for a confirmation message
#
# Usage:
#   confirm && echo continuing ...
#   confirm "Do you want to continue? [y/N]" && echo continuing ...

confirm() {
  msg="$1"

  [ -z "$1" ] && msg="Are you sure?"
  confirm_msg="${msg} [y/N]?"

  echo -ne "${confirm_msg} "
  read -r answer

  case "${answer}" in [yY] | [yY][eE][sS])
    exit 0
    ;;
  esac

  exit 1
}

confirm "$@"
