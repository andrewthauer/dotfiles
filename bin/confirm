#!/usr/bin/env bash
#
# description:
#   Prompt for a confirmation message
#
# usage:
#   confirm && echo continuing ...
#   confirm "Do you want to continue? [y/N]'" && echo continuing ...
#

confirm() {
  local msg=$1

  [[ -z "$1" ]] && msg="Are you sure?"
  confirm_msg="${msg} [y/N]?"

  echo "$confirm_msg "
  read answer

  case "${answer}" in
    [yY]|[yY][eE][sS])
      return 0
  esac

  return 1
}

confirm $@
