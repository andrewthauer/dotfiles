#!/usr/bin/env zsh
#
# description:
#   Symlinks files and diretories with the extension *.symlink
#

# Gets the symlink directory
__dotfile_symlink_target_dir() {
  local dir=$1
  local root_dir=$2

  if [ "$dir" = "${root_dir}" ]; then
    dir="$HOME"
  else
    dir="$HOME/.${dir}"
  fi
  echo $dir
}

# Symlinks a dot file (myfile.symlink)
__symlink_dotfile() {
  local rcfile=$1
  local dest_dir=$2

  # Default to home
  [ -z "$dest_dir" ] && dest_dir=$HOME

  # Prefix file with '.' if dir is ~
  local prefix=""
  [ "$dest_dir" = $HOME ] && prefix="."

  # Setup RC file symlinks
  local src=$(cd $(dirname $rcfile); pwd)/$(basename $rcfile)
  local dest="$dest_dir/$prefix$(basename $src .symlink)"

  # Remove existing symlinks
  if [ -L "$dest" ]; then
    echo "Removing symlink for $dest"
    rm $dest
  fi

  # Create new symlink
  if [ -e "$rcfile" ]; then
    echo "Symlinking '$src' to '$dest'"
    ln -s "$src" "$dest"
  fi
}

# Symlinks all dot files & directories inside a directory
__symlink_dotfile_dir() {
  local root_dir=$1
  typeset -U root_dir_matches
  local root_dir_matches=(${root_dir}/**/*)

  # Symlink rc files
  for file in ${root_dir_matchs}; do
    # get parent directory info
    local parent_dir="$(dirname "$dir")"
    local in_symlink_dir=

    # does parent_dir contain .symlink
    test "${parent_dir#*$.symlink}" != "$parent_dir" && in_symlink_dir=true

    # Symlink the entire directory
    if [ -d "$file" ] && [ "${file:e}" = "symlink" ]; then
      local dir="${file}"
      dir=$(dirname $dir)
      dir=$(__dotfile_symlink_target_dir ${dir#${root_dir}/} ${root_dir})
      __symlink_dotfile $file $dir
      echo
    fi

    # Handle files
    if [ "${file:e}" = "symlink" ] && [ "$in_symlink_dir" != "true" ]; then
      dir="${file:h}"
      dir=$(__dotfile_symlink_target_dir ${dir#${root_dir}/} ${root_dir})
      __symlink_dotfile $file $dir
      echo
    fi
  done
}

# disable glob nomatch errors
setopt +o nomatch

# Run the main
if [[ ! -z $1 ]]; then
  # Symlink a sinle directory
  local src="$1"
  __symlink_dotfile_dir "${src}"

else
  # Symlink all files
  local dir="$(dirname $0)"
  typeset -U all_dotfiles
  local all_dotfiles=(${dir}/../**/*)

  for file in ${all_dotfiles}; do
    if [[ -d "$file" ]]; then
      __symlink_dotfile_dir "$file"
    fi
  done
fi
