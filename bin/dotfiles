#!/usr/bin/env bash
# Summary:
#   Manage dotfiles
#
# Usage:
#   dotfiles [command]
#   dotfiles help

set -o errexit -o pipefail -o noclobber

usage() {
  echo "USAGE: dotfiles [command]"
  echo ""
  echo "COMMANDS:"
  echo "  install, i           Install dotfile modules"
  echo "  sync, s              Sync/link dotfile modules"
  echo "  add, a               Add modules to modules file"
  echo "  module, mod, m       Manage dotfile modules"
  echo "  package, pkg, p      Manage system packages"
  echo "  doctor               Check for dotfiles configuration issues"
  echo "  backup               Backup the local dotfiles directory"
  echo "  help                 Prints this message"
}

export DOTFILES_HOME="${DOTFILES_HOME:-$(cd "$(dirname "${BASH_SOURCE[0]}")/.." &>/dev/null && pwd)}"
PATH="$DOTFILES_HOME/bin:$PATH"

main() {
  cmd="$1"
  [ -n "$cmd" ] && shift

  case "$cmd" in
    install | i)
      dotfiles-module install "$@"
      ;;
    sync | s)
      dotfiles-module link "$@"
      ;;
    add | a)
      dotfiles-module add "$@"
      ;;
    module | mod | m)
      dotfiles-module "$@"
      ;;
    package | pkg | p)
      pkg "$@"
      ;;
    doctor)
      dotfiles-doctor "$@"
      ;;
    backup)
      dotfiles-backup "$@"
      ;;
    help | h | --help | -h)
      usage
      ;;
    *)
      sub_cmd="dotfiles-${cmd}"
      if [[ -x $(command -v "$sub_cmd") ]]; then
        $sub_cmd "$@" 2>&1
      else
        usage
      fi
      ;;
  esac
}

main "$@"
