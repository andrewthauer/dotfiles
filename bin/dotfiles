#!/usr/bin/env bash
# Summary:
#   Manage dotfiles
#
# Usage:
#   dotfiles [command]
#   dotfiles help

set -o errexit -o pipefail -o noclobber

usage() {
  echo "USAGE: dotfiles [command]"
  echo ""
  echo "COMMANDS:"
  echo "  module, mod, m       Manage dotfile modules"
  echo "  package, pkg, p      Manage system packages"
  echo "  doctor               Check for dotfiles configuration issues"
  echo "  backup               Backups up the local dotfiles directory"
  echo "  help                 Prints this message"
}

export DOTFILES_DIR="${DOTFILES_DIR:-$HOME/.dotfiles}"
export PATH="$DOTFILES_DIR/bin:$PATH"

main() {
  cmd="$1"
  [ -n "$cmd" ] && shift

  case "$cmd" in
    module | mod | m)
      dotfiles-module "$@"
      ;;
    package | pkg | p)
      pkg "$@"
      ;;
    doctor)
      dotfiles-doctor "$@"
      ;;
    backup)
      dotfiles-backup "$@"
      ;;
    help | h | --help | -h)
      usage
      ;;
    *)
      sub_cmd="dotfiles-${cmd}"
      if [[ -x $(command -v "$sub_cmd") ]]; then
        $sub_cmd "$@" 2>&1
      else
        usage
      fi
      ;;
  esac
}

main "$@"
