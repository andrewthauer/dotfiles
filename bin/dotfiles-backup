#!/usr/bin/env bash
# Summary:
#   Backup local machine setups & secrets
#
# Usage:
#   dotfiles-backup [target_dir]

set -e

main() {
  local target_dir="${1:-$DOTFILES_BACKUP_DIR}"

  if [ ! -d "${target_dir}" ]; then
    echo "Invalid target directory: '${target_dir}'"
    exit 1
  fi

  rsync \
    -arv \
    --delete \
    --exclude ".git" \
    "${DOTFILES_DIR}/" \
    "${target_dir}"
}

main "$@"
