#!/usr/bin/env zsh
#
# description:
#   Backup local machine setups & secrets
#
# usage:
#   dotfiles-backup [target_dir]
#

set -e

TARGET_DIR="${1:-$DOTFILES_BACKUP_DIR}"

if [[ ! -d "${TARGET_DIR}" ]]; then
  echo "Invalid target directory: '${TARGET_DIR}'"
  exit 1
fi

rsync \
  -arv \
  --delete \
  --include="*local*/" \
  --exclude="/*" \
  "${DOTFILES_DIR}/" \
  "${TARGET_DIR}"

exit 0
