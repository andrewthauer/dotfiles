#!/usr/bin/env bash
# Summary:
#   Smart preview
#
# Usage:
#   preview /path/to/item

set -e

if [ -d "$1" ]; then
  echo "Directory: $(realpath "$1")"
elif [ -f "$1" ]; then
  if [ "$(command -v 'bat')" ]; then
    bat --style=numbers --color=always "$1"
  else
    cat "$1"
  fi
else
  echo "Unable to preview: $1"
fi
