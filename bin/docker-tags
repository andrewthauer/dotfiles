#!/usr/bin/env bash
#
# description:
#   Get a list of tags for a docker image
#
# usage:
#   docker-tags [user/image]
#

set -e

if [ -x jq ]; then
  echo "jq is not installed"
  exit 1
fi

registry='https://registry.hub.docker.com/v2/repositories'
image=$1

curl -s "${registry}/${image}/tags/" | jq -r '."results"[]["name"]'
