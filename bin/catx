#!/usr/bin/env bash
# Summary:
#   Smart preview
#
# Usage:
#   preview /path/to/item

set -e

if [ -f "$1" ]; then
  if [ "$(command -v 'bat')" ]; then
    bat --style=numbers --color=always "$1"
  else
    cat "$1"
  fi
elif [ -d "$1" ]; then
  echo Directory: "$(realpath "$1")"
else
  echo "$1"
fi
