#!/usr/bin/env bash
#
# description:
#   Runs github sub commands
#
# usage:
#   github install
#

set -e

usage() {
  echo "Usage: github [command]"
  echo "";
  echo "COMMANDS:";
  echo "  install       Install or update a github repo";
}

exec_github() {
  cmd=$1
  args=${@:2}
  github_cmd="github-${cmd}"

  # Execute the command
  if [[ -x $(command -v $github_cmd) ]]; then
    $github_cmd $args 2>&1
  else
    usage
  fi
}

exec_github $@
