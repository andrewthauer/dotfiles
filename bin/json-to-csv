#!/usr/bin/env bash
# Summary:
#   Converts a json array file to csv
#
# Usage:
#   json-to-csv /path/to/csv
#   cat /path/to/csv | json-to-csv
#
# Input:
#   [
#     { "name": "foo", "value": "abc" },
#     { "name": "bar", "value": "def" },
#     { "name": "bat", "value": "ghi" }
#   ]

set -euxo pipefail

if [ ! "$(command -v 'jq')" ]; then
  echo "jq is not installed"
  exit 1
fi

jq <"${1:-/dev/stdin}" -r '(map(keys) | add | unique) as $cols | map(. as $row | $cols | map($row[.])) as $rows | $cols, $rows[] | @csv'
